{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": [
    "de",
    "en"
  ],
  "inputFiles": [
    "./renderer/src/**/*.ts"
  ],
  "output": {
    "mode": "runtime",
    "outputDir": "./locales",
    "language": "js"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "./translations/"
  }
}