{
  "name": "electron-template",
  "version": "0.1.0",
  "description": "Template for Electron based Applications",
  "main": "./main/dist/index.js",
  "scripts": {
    "clean": "pnpm run -r --parallel --reporter=append-only --aggregate-output clean && pnpx rimraf ./node_modules/",
    "build": "pnpm install && pnpm run --filter=* --reporter=append-only --aggregate-output build",
    "start": "pnpx electron ."
  },
  "author": "IIIMADDINIII <martin@elend.name>",
  "license": "MIT",
  "devDependencies": {
    "rollup": "^3.7.5",
    "typescript": "^4.9.4"
  },
  "pnpm": {
    "patchedDependencies": {
      "@rollup/plugin-typescript@10.0.1": "patches/@rollup__plugin-typescript@10.0.1.patch"
    }
  }
}